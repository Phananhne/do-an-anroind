<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:padding="16dp">

    <!-- Chữ đầu: Dự đoán tiền nước của bạn -->
    <TextView
        android:id="@+id/tvPredictionHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:textColor="@color/white"
        android:text="Dự đoán tiền nước của bạn"
        android:textSize="24sp" />

    <!-- Chữ sau: Bảng thống kê hóa đơn -->
    <TextView
        android:id="@+id/tvBillStatistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPredictionHeader"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:text="Bảng thống kê hóa đơn"
        android:textSize="18sp" />

    <!-- Chữ dưới: Kết quả dự đoán tháng sau -->
    <TextView
        android:id="@+id/tvNextMonthPrediction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_below="@+id/tvBillStatistics"
        android:layout_centerHorizontal="true"
        android:text="Kết quả dự đoán tháng sau"
        android:textSize="18sp" />
</RelativeLayout>
